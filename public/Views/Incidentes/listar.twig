{% extends 'Layout/default.twig' %}

{% block container %}
	<h1 class="title">Listagem de Incidentes</h1>

	<a href="{{ base_url() }}/incidentes/adicionar" class="btn btn-secondary float-right">Cadastrar</a>
	
	<a href="{{ base_url() }}/tipos/listar" class="btn btn-secondary float-right">Tipos</a>

	<a href="{{ base_url() }}/criticidades/listar" class="btn btn-secondary float-right">Criticidades</a>

	<table class="table">
	  <thead>
	    <tr>
	      <th scope="col">#</th>
	      <th scope="col">TÃ­tulo</th>
	      <th scope="col">Tipo</th>
	      <th scope="col">Criticidade</th>
	      <th scope="col"></th>
	    </tr>
	  </thead>
	  <tbody>
	  	{% for incidente in incidentes %}
		    <tr>
		      <th scope="row">{{incidente.id}}</th>
		      <td>{{incidente.titulo}}</td>
		      <td>{{incidente.tipo_titulo}}</td>
		      <td>{{incidente.criticidade_titulo}}</td>
		      <td class="actions">
		      	<a class="btn btn-secondary" href="{{ base_url() }}/incidentes/editar/{{ incidente.id }}">Editar</a>
		      	<form action="{{ base_url() }}/incidentes/deletar/{{ incidente.id }}" method="POST">
		      		<input type="hidden" name="_METHOD" value="DELETE"/>
		      		<input class="btn btn-danger" type="submit" value="Excluir">
	      		</form>
		      </td>
		    </tr>
	    {% endfor %}
	  </tbody>
	</table>	

{% endblock %}