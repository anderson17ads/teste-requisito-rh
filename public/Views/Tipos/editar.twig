{% extends 'Layout/default.twig' %}

{% block container %}
	<h1 class="title">Editar Tipo</h1>

	<form 
		method="POST" 
		action="{{ base_url() }}/tipos/editar/{{ tipo.id }}" 
		data-toggle="validator" role="form">
		
		<input type="hidden" name="_METHOD" value="PUT"/>
		
		<div class="form-group row">
			<label for="titulo" class="col-sm-2 col-form-label">Título</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" value="{{ tipo.titulo }}" name="titulo" id="titulo" placeholder="Título" required>
				<div class="help-block with-errors"></div>
			</div>
		</div> 

		<div class="form-group row">
			<label for="status" class="col-sm-2 col-form-label">Status</label>
			<div class="col-sm-10">
				<select name="status" id="status" class="form-control">
				<option>Escolha um status</option>
				<option value="1" {{ tipo.status == 1 ? 'selected' : ''}}>Ativo</option>
				<option value="0" {{ tipo.status == 0 ? 'selected' : ''}}>Inativo</option>
				</select>
			</div>
			<div class="help-block with-errors"></div>
	    </div>

	  
		<div class="form-group row">
			<button type="submit" class="btn btn-primary">Editar</button>
		</div>
	</form>

{% endblock %}