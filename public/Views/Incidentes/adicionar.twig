{% extends 'Layout/default.twig' %}

{% block container %}
	<h1 class="title">Cadastrar Incidente</h1>

	<a href="{{ base_url() }}/incidentes/listar" class="btn btn-secondary float-right">Listar</a>

	<form 
		method="POST" 
		action="{{ base_url() }}/incidentes/adicionar" 
		data-toggle="validator" 
		role="form">
		
		<div class="form-group row">
			<label for="titulo" class="col-sm-2 col-form-label">Título</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="titulo" id="titulo" placeholder="Título" required>
				<div class="help-block with-errors"></div>
			</div>
		</div> 

		<div class="form-group row">
			<label for="tipo_id" class="col-sm-2 col-form-label">Tipo</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="tipo_id" id="tipo_id" placeholder="Tipo" required>
				<div class="help-block with-errors"></div>
			</div>
		</div>

		<div class="form-group row">
			<label for="criticidade_id" class="col-sm-2 col-form-label">Criticidade</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="criticidade_id" id="criticidade_id" placeholder="Senha" required>
				<div class="help-block with-errors"></div>
			</div>
		</div>

		<div class="form-group row">
			<button type="submit" class="btn btn-primary">Cadastrar</button>
		</div>
	</form>

{% endblock %}