{% extends 'Layout/default.twig' %}

{% block container %}
	<h1 class="title">Cadastrar Tipo</h1>

	<a href="{{ base_url() }}/tipos/listar" class="btn btn-secondary float-right">Listar</a>

	<form 
		method="POST" 
		action="{{ base_url() }}/tipos/adicionar" 
		data-toggle="validator" 
		role="form">
		
		<div class="form-group row">
			<label for="titulo" class="col-sm-2 col-form-label">Título</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="titulo" id="titulo" placeholder="Título" required>
				<div class="help-block with-errors"></div>
			</div>
		</div> 

		<div class="form-group row">
			<label for="status" class="col-sm-2 col-form-label">Status</label>
			<div class="col-sm-10">
				<select name="status" id="status" class="form-control">
				<option selected>Escolha um status</option>
				<option value="1">Ativo</option>
				<option value="0">Inativo</option>
				</select>
			</div>
			<div class="help-block with-errors"></div>
	    </div>

		<div class="form-group row">
			<button type="submit" class="btn btn-primary">Cadastrar</button>
		</div>
	</form>

{% endblock %}